<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            EDITAR DATOS DEL EMPLEADO
        </div>
        <div class="card-body">
            {{#each empleado}}
            <form action="/empleados/editar/{{this.id}}" method="POST">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" class="form-control" name="nombre" id="nombre" value="{{this.nombre}}">
                </div>
                <div class="form-group">
                    <label for="departamento">Categoria:</label>
                    <input type="text" class="form-control" name="departamento" id="departamento" value="{{this.departamento}}">
                </div>
                <div class="form-group">
                    <label for="descripcion">Correo:</label>
                    <input type="text" class="form-control" name="correo" id="correo" value="{{this.correo}}">
                </div>
                <div class="form-group">
                    <label for="apellido">Edad:</label>
                    <input type="number" class="form-control" name="edad" id="edad" value="{{this.edad}}">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-sm btn-success">Guardar</button>
                </div>
            </form>
            {{/each}}
        </div>
    </div>
</div>