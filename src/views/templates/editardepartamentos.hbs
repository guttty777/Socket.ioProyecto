<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            EDITAR DATOS DEL DEPARTAMENTO
        </div>
        <div class="card-body">
            {{#each departamentos}}
            <form action="/departamentos/editar/{{this.id}}" method="POST">
                <div class="form-group">
                    <label for="categoria">Departamento:</label>
                    <input type="text" class="form-control" name="departamento" id="departamento" value="{{this.departamento}}">
                </div>
                <div class="form-group">
                    <label for="descripcion">Descripcion:</label>
                    <input type="text" class="form-control" name="descripcion" id="descripcion"
                        value="{{this.descripcion}}">
                </div>

                <button type="submit" class="btn btn-sm btn-success">Guardar</button>
        </div>
        </form>
        {{/each}}
    </div>
</div>
</div>