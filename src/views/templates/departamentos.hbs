<div class="mt-5 py-5 px-5">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Departamentos</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Opciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each departamentos}}
            <tr>
                <th scope="row">{{this.id}}</th>
                <td>{{this.departamento}}</td>
                <td>{{this.descripcion}}</td>

                <td>
                    <a href="/departamentos/editar/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
                    <a href="/departamentos/eliminar/{{this.id}}" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <a href="/departamentos/agregar" class="btn btn-sm btn-primary">Agregar</a>
</div>